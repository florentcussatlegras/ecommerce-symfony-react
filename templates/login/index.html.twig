{% extends 'login/_layout.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block content %}

    <form action="{{ path('app_login') }}" method="post" class="flex flex-col">

        <h1 class="font-bold text-xl">S' identifier</h1>

        {% if error %}
            <div class="text-red-500 mt-8">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="mt-8 text-sm flex flex-col gap-2">
            <label for="username">Votre adresse email</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" class="px-4 py-2 rounded-full bg-blue-50" required>
        </div>

        <div class="mt-4 text-sm flex flex-col gap-2">
            <label for="password">Votre mot de passe</label>
            <input type="password" id="password" name="_password" class="px-4 py-2 rounded-full bg-blue-50" required>
        </div>

        <input type="hidden" name"=_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}" />

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"> #}

        <button type="submit" class="mt-8 bg-gray-500 text-white uppercase px-4 py-2 rounded-full">Valider</button>

        <p class="mt-2 text-sm">
            Vous n'avez pas encore de compte? <a href={{ path('app_registration') }} class="text-sky-800">Cr√©ez en un</a>
        </p>

    </form>

{% endblock %}
